{
    "id": "clock",
    "title": "Clock Widget",
    "description": "Displays the current time. The time updates every second.",
    "code": "<div id='clock-widget' class='p-4 border rounded-lg shadow-sm max-w-md mx-auto text-center'><h2 class='text-2xl font-semibold'>Current Time</h2><p id='time' class='text-lg font-bold text-gray-700'>Loading...</p></div><script>function updateClock() {const timeElement = document.getElementById('time');const now = new Date();const hours = String(now.getHours()).padStart(2, '0');const minutes = String(now.getMinutes()).padStart(2, '0');const seconds = String(now.getSeconds()).padStart(2, '0');timeElement.textContent = `${hours}:${minutes}:${seconds}`;}setInterval(updateClock, 1000);updateClock();</script>",
    "author": "Johnson Chin"
  }
  